	<scm>
		<connection>scm:git:git@github.com:philion/guice-modules.git</connection>
		<developerConnection>scm:git:git@github.com:philion/guice-modules.git</developerConnection>
		<url>git@github.com:philion/guice-modules.git</url>
	</scm>

	<developers>
		<developer>
			<id>philion</id>
			<name>Paul Philion</name>
			<email>philion@acmerocket.com</email>
